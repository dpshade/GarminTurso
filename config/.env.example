# GarminTurso Configuration
# Copy this file to .env and fill in your values

# Garmin Connect Credentials
GARMIN_EMAIL=your.email@example.com
GARMIN_PASSWORD=your-password-here

# Database Configuration
# Path to Turso SQLite database
TURSO_DB_PATH=./data/garmin.db

# Data Collection Settings
# Number of days to collect data for on initial run
DAYS_BACK=30

# API Server Settings (for query_api.py)
API_HOST=0.0.0.0
API_PORT=8000